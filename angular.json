{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "",
  "projects": {
    "apollo": {
      "projectType": "library",
      "root": "apollo",
      "sourceRoot": "apollo/src",
      "prefix": "apollo",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "apollo/tsconfig.lib.json",
            "project": "apollo/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "apollo/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "apollo/src/test.ts",
            "tsConfig": "apollo/tsconfig.spec.json",
            "karmaConfig": "apollo/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apollo/tsconfig.lib.json",
              "apollo/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "apollo"
}
